<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:text="Give Rating"
        android:layout_marginTop="40dp"
        android:textAllCaps="true"
        android:textSize="18dp"
        android:fontFamily="@font/nexa"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16dp"
        android:id="@+id/rate_txt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Excellent"
        android:fontFamily="@font/nexa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <RatingBar
       android:rating="3.5"
       android:id="@+id/rating_bar_review_bottom_sheet"
       android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content" />


    <EditText
        android:layout_marginTop="20dp"
        android:background="@drawable/input_field_back"
        android:layout_width="match_parent"
        android:id="@+id/write_review_edit"
        android:layout_marginLeft="@dimen/left_margin_login"
        android:layout_marginRight="@dimen/right_margin_login"
        android:hint="Write a thankyou note"
        android:paddingLeft="10dp"
        android:layout_height="45dp" />
    <Button
        android:textColor="#ffffffff"
        android:layout_marginTop="30dp"
        android:text="Submit"
        android:id="@+id/submit_rating_btn"
        android:layout_width="match_parent"
        android:background="@color/y_color"
        android:layout_height="wrap_content" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/spleshColor"
    tools:activity="com.depex.okeyclick.sp.appscreens.LoginScreenActivity">
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="231dp"
        android:layout_height="147dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="36dp"
        android:src="@drawable/logo" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/HintInputTextAppearance"
        android:theme="@style/InputTextAppearance"
        android:id="@+id/email_login"
        android:layout_marginLeft="@dimen/left_margin_login"
        android:layout_marginRight="@dimen/right_margin_login"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email or Mobile Number" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        app:hintTextAppearance="@style/HintInputTextAppearance"
        android:theme="@style/InputTextAppearance"
        android:layout_marginLeft="@dimen/left_margin_login"
        android:id="@+id/password_login"
        android:layout_marginRight="@dimen/right_margin_login"
        android:layout_height="wrap_content"
        >

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />
    </android.support.design.widget.TextInputLayout>
    <Button

        android:background="@color/skip_back_color"
        android:textColor="@color/dark_back_text_color"
        android:text="Login"
        android:layout_marginTop="20dp"
        android:id="@+id/login_btn"
        android:layout_marginLeft="@dimen/left_margin_login"
        android:layout_marginRight="@dimen/right_margin_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="------OR------"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginLeft="@dimen/left_margin_login"
        android:layout_marginRight="@dimen/right_margin_login"
        android:background="@color/signup_btn_color"
        android:clickable="true"
        android:id="@+id/signup_button"
        android:layout_marginBottom="20dp"
        android:textColor="@color/dark_back_text_color"
        android:text="Sign Up as SP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

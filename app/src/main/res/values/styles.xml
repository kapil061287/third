<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/nexa</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="android:fontFamily">@font/nexa</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">#FFFFFFFF</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/eng_language_btn_color</item>
    </style>


    <style name="AppTheme.NoActionBarChoosActivity">
        <item name="android:fontFamily">@font/nexa</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#FFFFFFFF</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintInputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/input_floating_color</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/nexa</item>
        <item name="colorAccent">@color/input_floating_color</item>
    </style>

    <style name="InputTextAppearance" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textColorHint">#ff000000</item>
        <item name="android:fontFamily">@font/nexa</item>
        <item name="android:textSize">16dp</item>
        <item name="colorAccent">#ff000000</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#ffff0000</item>
        <item name="android:fontFamily">@font/nexa</item>
        <item name="android:textColorHint">#ffff0000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="colorAccent">#ffff0000</item>
    </style>


    <style name="AppTheme.Navigation">
        <item name="android:fontFamily">@font/nexa</item>
        <item name="android:textSize">16dp</item>
        <item name="android:listDivider">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.TextInViewProfile">
        <item name="android:fontFamily">@font/nexa</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="AppTheme.TextInViewProfile2">
        <item name="android:fontFamily">@font/nexa</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#14bcea</item>
    </style>

    <style name="AppTheme.TextViewFont">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">@font/nexa</item>
        <item name="android:textColor">#FF000000</item>
    </style>

    <style name="AppTheme.TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#ffaaaaaa</item>
    </style>




    <color name="eng_language_btn_color">#FF000000</color>
</resources>
